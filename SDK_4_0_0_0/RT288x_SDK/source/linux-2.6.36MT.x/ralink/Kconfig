menu "Ralink Module"

###########
# Debuging
###########
source "drivers/net/rt_rdm/Kconfig"

#############
# Wire
#############
source "drivers/net/raeth/Kconfig"

#############
# Wireless
#############
menuconfig WIFI_DRIVER
	bool "WiFi Driver Support"

if WIFI_DRIVER
choice
	prompt "Choose First WiFi Interface"
	config  1STIF_RTPCI
	bool "RTPCI"
	depends on RTPCI_AP
	config  1STIF_RT3090
	bool "RT3090"
	depends on RT3090_AP
	config  1STIF_RT5392
	bool "RT5392"
	depends on RT5392_AP
	config  1STIF_RT5592
	bool "RT5592"
	depends on RT5592_AP
	config  1STIF_RT3593
	bool "RT3593"
	depends on RT3593_AP
	config  1STIF_RT3572
	bool "RT3572"
	depends on RT3572_AP
	config  1STIF_RT5572
	bool "RT5572"
	depends on RT5572_AP
endchoice

#source "drivers/net/wireless/RTPCI_ap/Kconfig"
config  RTPCI_AP_RF_OFFSET
	depends on RTPCI_AP
	hex
	default 0x40000 if 1STIF_RTPCI
	default 0x48000 if !1STIF_RTPCI

#source "drivers/net/wireless/RT3090_ap/Kconfig"
config  RT3090_AP_RF_OFFSET
	depends on RT3090_AP
	hex
	default 0x40000 if 1STIF_RT3090
	default 0x48000 if !1STIF_RT3090

#source "drivers/net/wireless/RT5392_ap/Kconfig"
config  RT5392_AP_RF_OFFSET
	depends on RT5392_AP
	hex
	default 0x40000 if 1STIF_RT5392
	default 0x48000 if !1STIF_RT5392

#source "drivers/net/wireless/RT5592_ap/Kconfig"
config  RT5592_AP_RF_OFFSET
	depends on RT5592_AP
	hex
	default 0x40000 if 1STIF_RT5592
	default 0x48000 if !1STIF_RT5592

#source "drivers/net/wireless/RT3593_ap/Kconfig"
config  RT3593_AP_RF_OFFSET
	depends on RT3593_AP
	hex
	default 0x40000 if 1STIF_RT3593
	default 0x48000 if !1STIF_RT3593

#source "drivers/net/wireless/RT3572_ap/Kconfig"
config  RT3572_AP_RF_OFFSET
	depends on RT3572_AP
	hex
	default 0x40000 if 1STIF_RT3572
	default 0x48000 if !1STIF_RT3572

#source "drivers/net/wireless/RT5572_ap/Kconfig"
config  RT5572_AP_RF_OFFSET
	depends on RT5572_AP
	hex
	default 0x40000 if 1STIF_RT5572
	default 0x48000 if !1STIF_RT5572

config RTDEV
	bool
	depends on RT3090_AP || RT5392_AP || RT5592_AP || RT3593_AP || RT3572_AP || RT5572_AP || RTPCI_AP
	default y if RTPCI_AP
	default y if RT3090_AP && !1STIF_RT3090
	default y if RT5392_AP && !1STIF_RT5392
	default y if RT5592_AP && !1STIF_RT5592
	default y if RT3593_AP && !1STIF_RT3593
	default y if RT5592_AP_MULTIPLE_CARD || RT3593_AP_MULTIPLE_CARD
	default y if RT3572_AP && !1STIF_RT3572
	default y if RT5572_AP && !1STIF_RT5572
endif # WIFI_DRIVER

#######
# NAT
#######
choice
prompt "Ralink NAT Type"
	
config  RA_NAT_NONE
bool "None"
config  RA_NAT_HW
bool "Hardware"
endchoice

source "net/nat/hw_nat/Kconfig"

endmenu

